<div class="d-flex justify-content-between">
    <h3>Categories</h3>
    <form asp-action="Index" asp-controller="Category" method="post" class="d-flex">
        <div asp-validation-summary="All"></div>
        <input type="text" name="categoryName" id="categoryName" class="form-control">
        <button type="submit" class="btn btn-outline-dark">Create</button>
    </form>
</div>
<hr>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Category Name</td>
            <td>#</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model){
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="/Category/Details/@category.CategoryId" class="btn btn-warning btn-sm">Details</a>
                    <a href="/Category/Delete/@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>