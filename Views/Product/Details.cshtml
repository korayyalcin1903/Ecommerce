<div class="row d-flex align-items-start" style="height: 75vh;">
    <div class="col-6">
        <img src="~/img/product/@Model.Image" class="img-fluid" style="height: 75vh;" alt="">
    </div>
    <div class="col-6 bg-light" style="height: 75vh;">
        <h3 class="mb-3">@Model.ProductName</h3>
        <div class="d-flex align-items-center">
            <h4 class="text-secondary text-decoration-line-through">@(Model.Price*0.1 + Model.Price) ₺</h4> 
            <h5 class="mx-3 text-success">%10 <i class="bi bi-caret-down-fill text-success"></i></h5>
        </div>
        <h3 class="text-success mb-3"><strong>@String.Format("{0:N2} ₺", Model.Price)</strong></h3>
        <button type="submit" class="btn btn-outline-secondary">Add to basket</button>
    </div>
</div>
<hr>
<div class="bg-light p-3">
    <h3>Ürün Açıklaması</h3>
    @Html.Raw(Model.Description)
</div>
<hr>
<div>
    <h4>You may also be interested in these</h4>
    <hr>
    <div class="row">
        @foreach(var product in ViewBag.Products){
            <div class="card mb-3 col-2 col-sm-2 col-md-2">
                <div class="text-start">
                    <div class="">
                    <a href="@product.ProductId"><img src="~/img/product/@product.Image" class="img-fluid rounded" alt="..."></a>
                    </div>
                    <div class="">
                        <div class="card-body">
                            <a href="@product.ProductId" style="text-decoration: none;" class="text-dark"><h5 class="card-title">@product.ProductName.Substring(0, Math.Min(40, product.ProductName.Length))...</h5></a>
                            <strong>@product.Price ₺</strong>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>